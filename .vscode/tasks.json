{
    "version": "2.0.0",
    "tasks": [
        {
            // Run the tasks on the PS or Cmd
            "type": "shell",
            "label": "C++ Basic Build",
            "command": "C:/Program Files/mingw-w64/x86_64-8.1.0-win32-seh-rt_v6-rev0/mingw64/bin/g++.exe",
            // "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-std=gnu++17",
                "-g",
                "${relativeFile}",
                "-o",
                "${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Run the tasks on the PS or Cmd
            "type": "shell",
            "label": "Windows Desktop App Build",
            // "command": "C:/MinGW/bin/g++.exe",
            "command": "C:/Program Files/mingw-w64/x86_64-8.1.0-win32-seh-rt_v6-rev0/mingw64/bin/g++.exe",
            "args": [
                "${fileBasenameNoExtension}.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            // Run the tasks on the PS or Cmd
            "type": "shell",
            "label": "Win App Resourse Build",
            "command": "windres",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-c",
                "65001"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            // Run the tasks on the PS or Cmd
            "type": "shell",
            "label": "Windows Desktop App Add Resourse Build",
            // "command": "C:/MinGW/bin/g++.exe",
            "command": "C:/Program Files/mingw-w64/x86_64-8.1.0-win32-seh-rt_v6-rev0/mingw64/bin/g++.exe",
            "args": [
                "${fileDirname}/${fileBasenameNoExtension}.cpp",
                "${fileDirname}/${fileBasenameNoExtension}.o",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}